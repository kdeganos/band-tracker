<h1>Edit: $venue.getName()</h1>

#if ($formError)
<h3 class="animated flash error">Please be sure to enter a Venue Name</h3>
#end

<form action="/venue/$venue.getId()/edit" method="post">
  <label for="name">Band Name</label>
  <input type="text" id="name" name="name" value="$venue.getName()">

  <button type="submit" class="btn btn-success">Edit</button>
</form>

<a href="/venue/$venue.getId()/delete" class="btn btn-danger">Delete $venue.getName()</a>
<br>

