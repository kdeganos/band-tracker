<h1>Add a Band</h1>

#if ($formError)
<h3 class="animated flash error">Please be sure to enter a Band Name</h3>
#end

<form action="/add-band" method="post">
  <label for="name">Band Name</label>
  <input type="text" id="name" name="name">

  <button id="submitBand" type="submit" class="btn btn-success">Submit</button>
</form>

<a href="/list-bands">List All Bands</a>
